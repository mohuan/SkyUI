<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingRight="160dp"
    android:paddingLeft="160dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/setting_but_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原setting"
            />

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/setting_but_tj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国学setting"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/source_setting_but_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原 点击更改信号源名称"
            />

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/source_setting_but_tj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国学 点击更改信号源名称"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/navgation_but_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原 navgation"
            />

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/navgation_but_tj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国学 navgation"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/menu_but_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原 menu"
            />

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/menu_but_tj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国学 menu"
            />
    </RelativeLayout>
</LinearLayout>