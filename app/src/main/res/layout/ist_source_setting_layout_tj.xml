<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50px" >

            <FrameLayout
                android:id="@+id/source_title_back"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerVertical="true"
              
                android:background="@drawable/selector_source_back"
                android:clickable="true"
                android:focusable="true" >

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_gravity="center"
                    android:src="@drawable/source_back" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/change_source_name"
                android:textColor="@color/menuview_text_color_tj"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/menuview_text_color_tj" />

        <GridView
            android:id="@+id/source_setting_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:horizontalSpacing="20px"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="20px" />
    </LinearLayout>

</android.support.v7.widget.CardView>